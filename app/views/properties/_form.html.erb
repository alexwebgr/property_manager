<%= form_with(model: property) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :placeId %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', maxlength: 155 %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_type_id, class: 'd-block' %>
    <%= form.collection_select(:transaction_type_id, TransactionType.all, :id, :label, {}, class: 'custom-select') %>
  </div>

  <div class="form-group">
    <%= form.label :area, class: 'd-block' %>
    <%= form.text_field :area, class: 'form-control' %>
    <div class="list-group" id=areas-dd>

    </div>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :extra_description %>
    <%= form.text_area :extra_description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
