<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1>Transaction Types</h1>
  <%= link_to 'New Transaction Type', new_transaction_type_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th>Label</th>
      <th>Handle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_types.each do |transaction_type| %>
      <tr>
        <td><%= transaction_type.label %></td>
        <td><%= transaction_type.handle %></td>
        <td><%= link_to 'Show', transaction_type %></td>
        <td><%= link_to 'Edit', edit_transaction_type_path(transaction_type) %></td>
        <td><%= link_to 'Destroy', transaction_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
